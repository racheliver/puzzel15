<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/backgroundColor"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/txvTitleID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Welcome to Game of Fifteen "
            android:textColor="@color/tilesBackground"
            android:textSize="37dp"
            android:textStyle="bold"
            app:fontFamily="cursive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.068" />

    <ImageView
        android:id="@+id/imgID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/darkpuzzle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_audiotrack" />

        <Switch
            android:id="@+id/swtID"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:includeFontPadding="true"
            android:text="Music"
            android:textColor="@color/tilesBackground"
            android:textOff="OFF"
            android:textOn="ON"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius"
            android:fontFamily="sans-serif-condensed"
            android:text="Start Play"
            android:textColor="@color/tilesBackground"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
